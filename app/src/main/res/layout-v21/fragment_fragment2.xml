<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="net.sgoliver.android.navigationdrawer.Fragment1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardBackgroundColor="#ffffff"
        android:elevation="30dp"
        android:id="@+id/view"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <EditText
                android:id="@+id/txtPlaca"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/tabsScrollColor"
                android:hint="Placa"
                android:textColorHint="@color/texthint"
                android:backgroundTint="@color/BackTint"
                android:gravity="center"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_ic_camera_party_mode_grey600_48dp"
                android:background="@drawable/btncircular"
                android:layout_marginTop="100dp"
                android:id="@+id/imageButton"
                android:layout_alignStart="@id/txtPlaca" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/abc_ic_voice_search_api_mtrl_alpha"
                android:layout_alignTop="@+id/imageButton"
                android:layout_alignRight="@+id/txtPlaca"
                android:layout_alignEnd="@+id/txtPlaca"
                android:background="@drawable/btncircular"
                android:id="@+id/imageButton2" />


            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/btnrectangular"
                android:layout_marginTop="180dp"
                android:layout_centerHorizontal="true"
                android:text="Buscar" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>
