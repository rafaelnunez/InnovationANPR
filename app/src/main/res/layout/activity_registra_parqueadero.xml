<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSiguiente"
        android:layout_below="@+id/txtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text="Siguiente"
        android:background="#03a9f4" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardBackgroundColor="#ffffff"
        android:elevation="30dp"
        android:id="@+id/view"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <EditText
                android:id="@+id/txtNomEnt"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="@color/tabsScrollColor"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:hint="Nombre Entidad"
                android:textColorHint="@color/texthint"
                android:backgroundTint="@color/BackTint"
                android:gravity="center"
                android:layout_marginLeft="30dp" />

            <EditText
                android:id="@+id/txtNIT"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/tabsScrollColor"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:hint="NIT"
                android:textColorHint="@color/texthint"
                android:backgroundTint="@color/BackTint"
                android:gravity="center"
                android:layout_marginLeft="30dp"
            />

            <EditText
                android:id="@+id/txtDireccion"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/tabsScrollColor"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:hint="Dirección"
                android:textColorHint="@color/texthint"
                android:backgroundTint="@color/BackTint"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                />

            <EditText
                android:id="@+id/txtCapacidad"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:layout_marginTop="20dp"
                android:textColor="@color/tabsScrollColor"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:hint="Capacidad"
                android:textColorHint="@color/texthint"
                android:backgroundTint="@color/BackTint"
                android:ems="10"
                android:layout_marginLeft="30dp"
                android:gravity="center"

                 />

            <Spinner
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/SpTipoVehiculo"
                android:textColor="@color/tabsScrollColor"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColorHint="@color/texthint"
                android:backgroundTint="@color/BackTint"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="480dp"
        android:background="#03a9f4"
        android:elevation="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIGURACIÓN"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:textStyle="normal|italic"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Registra  los datos de la entidad:"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

</RelativeLayout>
